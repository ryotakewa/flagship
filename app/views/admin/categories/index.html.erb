<h2>親カテゴリ一覧</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名称</th>
    </tr>
  </thead>

  <tbody>
    <% @parent_categories.each do |category| %>
      <tr onclick='window.location="<%= admin_category_path(category) %>";'>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>子カテゴリ一覧</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>カテゴリ</th>
      <th>名称</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr onclick='window.location="<%= admin_category_path(category) %>";'>
        <td><%= category.id %></td>
        <td><%= category.category.name if category.category.present? %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規カテゴリ', new_admin_category_path %>

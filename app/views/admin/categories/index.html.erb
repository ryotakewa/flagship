<h2>親カテゴリ一覧</h2>

<table class="table table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>名称</th>
  </tr>
  <% @parent_categories.each do |category| %>
    <tr onclick='window.location="<%= admin_category_path(category) %>";'>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
    </tr>
  <% end %>
</table>

<h2>子カテゴリ一覧</h2>

<table class="table table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>カテゴリ</th>
    <th>名称</th>
  </tr>

  <% @categories.each do |category| %>
    <tr onclick='window.location="<%= admin_category_path(category) %>";'>
      <td><%= category.id %></td>
      <td><%= category.category.name if category.category.present? %></td>
      <td><%= category.name %></td>
    </tr>
  <% end %>
</table>

<%= link_to '新規カテゴリ', new_admin_category_path, { class: "btn btn-default" } %>

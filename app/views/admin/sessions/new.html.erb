<h1>ログイン</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label 'メールアドレス' %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% false && if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

